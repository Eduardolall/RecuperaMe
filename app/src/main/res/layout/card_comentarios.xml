<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <!-- Foto del perfil del comentarista -->
    <ImageView
        android:id="@+id/imgPerfilComentario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/perfil"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"/>

    <!-- Nombre del comentarista -->
    <TextView
        android:id="@+id/txtNombreComentarista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de Comentarista"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/imgPerfilComentario"
        android:layout_alignTop="@id/imgPerfilComentario"/>

    <!-- Contenido del comentario -->
    <TextView
        android:id="@+id/txtContenidoComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contenido del comentario"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/imgPerfilComentario"
        android:layout_marginTop="8dp"/>
</RelativeLayout>